{
  "hosting": [
    {
      "target": "nuevo",
      "public": "dist",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "/tienda/**",
          "destination": "/index.html"
        },
        {
          "source": "/inventario/**",
          "function": "inventarioIA"
        },
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    }
  ],
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-analytics.log"
      ]
    }
  ]
}