<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>CarBot Frontend</title>
  <style>
    body { font-family: Arial, sans-serif; padding: 2rem; }
    input, button { padding: 0.5rem; margin: 0.5rem 0; }
    #resultado { margin-top: 1rem; font-weight: bold; }
  </style>
</head>
<body>
  <h1>CarBot Frontend</h1>
  <h2>Cotizar vehículo</h2>

  <form id="formulario">
    <label>Modelo:</label><br>
    <input type="text" id="modelo" required><br>

    <label>Precio:</label><br>
    <input type="number" id="precio" required><br>

    <button type="submit">Cotizar</button>
  </form>

  <div id="resultado"></div>

  <script>
    const form = document.getElementById('formulario');
    const resultado = document.getElementById('resultado');

    form.addEventListener('submit', async (e) => {
      e.preventDefault();

      const modelo = document.getElementById('modelo').value;
      const precio = Number(document.getElementById('precio').value);

      try {
        const res = await fetch('http://localhost:3001/api/cotizar', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ modelo, precio })
        });

        const data = await res.json();
        if (data.success) {
          resultado.textContent = `Cotización: Modelo ${data.cotizacion.modelo}, Precio final: $${data.cotizacion.precioFinal.toFixed(2)}`;
        } else {
          resultado.textContent = `Error: ${data.message}`;
        }
      } catch (err) {
        resultado.textContent = 'Error conectando con el backend';
      }
    });
  </script>
</body>
</html>