rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Reglas para la versión legada (Silo Único / Solo Usuarios)
    
    match /vehicles/{document=**} {
      allow read, write: if true;
    }
    
    match /contracts/{document=**} {
      allow read, write: if true;
    }
    
    match /quotes/{document=**} {
      allow read, write: if true;
    }
    
    match /users/{document=**} {
      allow read, write: if true;
    }

    match /Permisos/{document=**} {
      allow read, write: if true;
    }

    match /Dealers/{document=**} {
      allow read, write: if true;
    }
    
    match /inventario/{document=**} {
      allow read, write: if true;
    }
    
    // Regla por defecto para cualquier otra colección
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
